<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceContainer name="form.additional.info">
            <block class="Hts\ReCaptcha\Block\Frontend\ReCaptcha" name="hts-recaptcha" after="-"
                   template="Hts_ReCaptcha::hts_recaptcha.phtml">

                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="hts-recaptcha" xsi:type="array">
                                <item name="component" xsi:type="string">Hts_ReCaptcha/js/reCaptcha</item>
                                <item name="zone" xsi:type="string">create</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
